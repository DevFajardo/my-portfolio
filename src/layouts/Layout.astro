---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Emmanuel Fajardo desarrollador web frontend creacion de paginas web"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    background-color: rgba(17, 17, 17, 1);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  main{
	color: white;
	margin: auto;
	padding: 2px;
	display: grid;
	border: 2px solid red;
  }
</style>
