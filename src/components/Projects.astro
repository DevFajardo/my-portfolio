---
import memoryGame from './assets/memoryGame.png'
import { Image } from "astro:assets";

const projects = [
  {
    name: 'Memory Game',
    description: 'Juego de memoria',
    image: memoryGame,
    url: '',
    github: '',
    technologies: ['NextJs', 'Typescript', 'TailwindCss']
  },
  {
    name: 'Memory Game',
    description: 'Juego de memoria',
    image: memoryGame,
    url: '',
    github: '',
    technologies: ['NextJs', 'Typescript', 'TailwindCss']
  }
]
---
<section>
  <div class="container">
    <h2>Proyectos</h2>
    <div class="container__projects">
      {projects.map(project => {
        return (
          <div class="projects">
            <Image
            width={200}
            height={100}
            src={project.image}
            alt="imagen del proyecto"
            loading="eager"
            />
            <h3>{project.name}</h3>
            <ul>
              {project.technologies.map(technology => {
                return <li>{technology}</li>
              })}
            </ul>
          </div>
        )
      })}
    </div>
  </div >
</section>

<style>
  img{
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
  }
  .projects{
    padding: 8px 8px 8px 0px;
    border-radius: 8px;
    box-shadow: 3px 3px 3px 0px rgba(230, 57, 70, 1);
  }
  h3{
    margin-bottom: 5px;
    color: white;
    font-weight: 700;
  }
  ul{
    list-style: none;
  }
  section {
    background-color: rgb(23, 23, 23);
    border: 1px solid rgb(44, 44, 44);
    border-radius: 8px;
    grid-column: 2 / 3;
    grid-row: 2 / 4;
  }
  section:hover{
    outline: 1px solid rgba(230, 57, 70, 1);
  }
  .container{
    padding: 2rem 2rem 0rem 2rem;
  }
  .container__projects{
    display: flex;
    justify-content: space-between;
  }
  h2{
    margin-bottom: 1.5rem;
  }
</style>
