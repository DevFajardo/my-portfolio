---
import { projects } from "../data/projects";
import CardProjects from "./ui/CardProjects.astro";
---

<section>
  <div class="container">
    <h2>Proyectos</h2>
    <div class="container__projects">
      {
        projects.map((project) => {
          return <CardProjects project={project}/>;
        })
      }
    </div>
  </div>
</section>

<style>
  img {
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
  }

  h3 {
    margin-bottom: 5px;
    color: white;
    font-weight: 700;
  }

  section {
    background-color: rgb(23, 23, 23);
    border: 1px solid rgb(44, 44, 44);
    border-radius: 8px;
    grid-column: 2 / 3;
    grid-row: 2 / 4;
  }
  section:hover {
    outline: 1px solid rgba(230, 57, 70, 1);
  }
  .container {
    padding: 2rem 2rem 0rem 2rem;
  }
  .container__projects {
    display: flex;
    justify-content: space-between;
  }
  h2 {
    margin-bottom: 1.5rem;
  }
</style>
